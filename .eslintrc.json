{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      }
    }
  },
  "rules": {
    "no-duplicate-imports": "error",
    "no-console": "off",
    "no-unused-vars": "warn",
    "no-await-in-loop": "off",
    "default-case": "error",
    "max-len": [
      2,
      130,
      4,
      {
        "ignoreUrls": true
      }
    ],
    "no-shadow": "off",
    "camelcase": "warn",
    "no-plusplus": "off",
    "sort-imports": [
      "off",
      {
        "ignoreCase": false,
        "ignoreDeclarationSort": false,
        "ignoreMemberSort": false,
        "memberSyntaxSortOrder": [
          "none",
          "all",
          "multiple",
          "single"
        ],
        "allowSeparatedGroups": false
      }
    ],
    "no-var": "error",
    "no-else-return": "error",
    "semi": "warn",
    "indent": [
      "error",
      4
    ],
    "import/extensions": "off",
    "no-multi-spaces": "off",
    "no-multiple-empty-lines": "error",
    "prefer-const": "error",
    "no-use-before-define": "error"
  }
}
